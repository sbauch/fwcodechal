{
  "name": "FileOps",
  "version": "0.0.1",
  "description": "The basic task is to asynchronously read files from a directory, append four pieces of information to each file and then to output the results of the script (number renamed, number of errors if any, etc).",
  "scripts": {
    "start": "npm run lint && babel-node index.js",
    "clean": "rm -r ./files/moved",
    "lint": "eslint index.js lib/**"
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  },
  "dependencies": {
    "lodash": "^4.17.4",
    "moment": "^2.18.1"
  },
  "devDependencies": {
    "babel-cli": "^6.24.1",
    "babel-preset-env": "^1.6.0",
    "babel-preset-es2015": "^6.24.1",
    "eslint": "^4.4.1",
    "eslint-config-airbnb-base": "^11.3.1",
    "eslint-plugin-import": "^2.7.0"
  }
}
